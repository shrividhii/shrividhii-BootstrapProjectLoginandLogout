
@{
    ViewBag.Title = "UserProfile";
}

<h2>UserProfile</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Login</title>
    <link rel="stylesheet" href="/Butterfly/assets/css/style.css">
</head>
<body class="user-login">
    <section>

        <div>
            <img src="~/Butterfly/user.png" class="userimg" alt="image">
        </div>

        <div class="offset-1 col-lg-10" id="bbtn">
            <button class="btn2">Logout</button>
        </div>
    </section>
</body>
<script>
    function checkLoggedIn() {
        var cookies = document.cookie.split(';');
        for (var i = 0; i < cookies.length; i++) {
            var cookie = cookies[i].trim();
            if (cookie.startsWith("user=true")) {
                return true;
            }
        }
        return false;
    }

    if (!checkLoggedIn()) {
        // window.alert("You do donthave acces")
        window.location.href = "index.html";
    }
    const logbtn = document.querySelector(".btn2")
    logbtn.addEventListener("click", () => {
        window.location.replace("login.html")
    })
</script>
</html>


